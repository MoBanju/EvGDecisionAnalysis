<Window x:Class="EvGDecisionAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EvGDecisionAnalysis.View.UserControls"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="20">
            <local:InputBox x:Name="pe1Input" Label="P(E1):" />
            <local:InputBox x:Name="npve1Input" Label="P(~V|E1):" />
            <local:InputBox x:Name="pe2Input" Label="P(E2):" />
            <local:InputBox x:Name="npve2Input" Label="P(~V|E2):" />
            <Button Content="Calculate Result" Click="btnResult_Click" Margin="5" Width="260"/>
            <TextBlock Name="resultTextBlock" Margin="5" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
